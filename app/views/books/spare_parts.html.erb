<div class="col-lg-offset-5 col-lg-7 col-md-offset-5 col-md-7"><h1>Edit Book</h1></div>
<form action="/books/<%= @book.id %>" method="put">
  <div class="col-lg-2 col-lg-offset-2 col-md-2 col-md-offset-2">
    <div><h3>Title</h3></div>
    <div><input type="text" value="<%= @book.title %>" name="book[title]"></div>
  </div>
  <div class="col-lg-2 col-md-2">
    <div><h3>Author</h3></div>
    <div><input type="text" value="<%= @book.author %>" name="book[author]"></div>
  </div>
  <div class="col-lg-2 col-md-2">
    <div><h3>Cuisine</h3></div>
    <div><input type="text" value="<%= @book.cuisine %>" name="book[cuisine]"></div></div>
  <div class="col-lg-2 col-md-2">
    <div><h3>Pub Date</h3></div>
    <div><input type="text" value="<%= @book.publication_date.strftime("%b-%Y") %>" name="book[publication_date]"></div></div>
  <div class="col-lg-offset-5 col-lg-2 col-md-offset-5 col-md-2 col-sm-2 col-xs-4">
    <input type="submit" class="btn btn-primary btn-block" value="Submit Changes">
  </div>
</form>
