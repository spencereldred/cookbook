from index.html.erb
<div class="col-lg-7 col-lg-offset-5"><h1>Cookbooks</h1></div>

<div class="col-lg-2 col-lg-offset-2"><h3>Title</h3></div>
<div class="col-lg-2">                         <h3>Author</h3> </div>
<div class="col-lg-2">                         <h3>Cuisine</h3></div>
<div class="col-lg-4">                         <h3>Pub Date</h3></div>

<% @books.each do |book| %>

<div class="col-lg-2 col-lg-offset-2"><%= book.title %></div>
<div class="col-lg-2"><%= book.author %> </div>
<div class="col-lg-2"><%= book.cuisine %></div>
<div class="col-lg-1"><%= book.publication_date.strftime("%b %Y") %></div>
<div class="col-lg-3">
  <a href="/books/<%= book.id %>/edit">
    <input type="submit" class="btn btn-primary btn-xs" value="Edit">
  </a>
</div>
<% end %>
<div class="container">
  <div class="col-lg-offset-5 col-lg-2">
    <a href="/books/new"><button class="btn btn-primary btn-block">Add New Book</button></a>
  </div>
</div>

