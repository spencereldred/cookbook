<%= form_for @ingredient do  |f|  %>
    <div class="col-lg-offset-4 col-lg-2"><%= f.label :name %></br>
                  <%= f.text_field :name, placeholder: "name" %></div>
    <div class="col-lg-2"><%= f.label :category %></br>
                  <%= f.text_field :category, placeholder: "category" %></div>
    <br>
    <div class="col-lg-offset-5 col-lg-2"><%= f.submit "Save Ingredients" %></div>
<% end %>
