<div>
  <h5>
    <div class="col-lg-offset-1 col-lg-2"><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></div>
    <div class="col-lg-1"><%= recipe.book_id %></div>
    <div class="col-lg-1"><%= recipe.chapter %></div>
    <div class="col-lg-1"><%= recipe.page_number %></div>
    <div class="col-lg-2"><%= recipe.directions %></div>
    <div class="col-lg-2"><%= recipe.image %></div>
    <div class="col-lg-2"><%= link_to "Edit", edit_recipe_path(recipe) %> <!-- /recipes/:id -->
    <%= link_to "Delete", recipe_path(recipe), :method => :delete, :confirm => "Are you sure?" %></div>
  </h5>
</div>